- if message.image.present?
  .message{data: {message: {id: message.id}}}
    .message__upper
      %p.message__upper__user-name<
        = message.user.name
      %p.message__upper__date<
        = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
    %p.message__text<
      = message.body
      %br
      = image_tag message.image.url
- else
  .message{data: {message: {id: message.id}}}
    .message__upper
      %p.message__upper__user-name<
        = message.user.name
      %p.message__upper__date<
        = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
    %p.message__text<
      = message.body